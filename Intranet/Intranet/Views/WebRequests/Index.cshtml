@model IEnumerable<Intranet.ViewModels.WebRequestsViewModel>

@{
    ViewBag.Title = "Web Requests";
}

<h2>My Web Requests</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success">@TempData["Message"]</div>
}
<br />
@using (Html.BeginForm())
{
    <input type="submit" value="Create Request" name="Buttons" class="btn btn-primary" />
    if (@User.IsInRole("SCGCORP\\Developers"))
    {
        <input type="submit" value="Manage Web Requests" name="Buttons" class="btn btn-primary" />
    }
}
<br />

<table width="100%">
    <tr>
        <td>
            <div id="demo">
                <table id="datatablesRequests" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.WebRequestID)</th>
                            <th>@Html.DisplayNameFor(model => model.RequestDate)</th>
                            <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
                            <th>@Html.DisplayNameFor(model => model.WorkType)</th>
                            <th>@Html.DisplayNameFor(model => model.projnum)</th>
                            <th>@Html.DisplayNameFor(model => model.WebRequestStatus)</th>
                            <th>@Html.DisplayNameFor(model => model.CompletedDate)</th>
                            <th>Manage</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.WebRequestID</td>
                            <td>@item.RequestDate.Value.ToShortDateString() @*@item.RequestDate.Value.ToShortTimeString()*@</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.WorkType</td>
                            <td>@item.projnum</td>
                            <td>@item.WebRequestStatus</td>
                            <td>@item.CompletedDate</td>
                            <td>
                                @Html.ActionLink("View", "Details", new { id = item.WebRequestID })

                                @*<text>|</text>

                                    @if (item.WebRequestStatus != "Approved")
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.WebRequestID })
                                    }
                                    else
                                    {
                                        <span class="text-muted">Edit</span>
                                    }

                                    <text>|</text>

                                    @if (item.WebRequestStatus == "Published")
                                    {
                                        <span class="text-muted">Delete</span>
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Delete", "Delete", new { id = item.WebRequestID })
                                    }*@

                            </td>

                        </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>


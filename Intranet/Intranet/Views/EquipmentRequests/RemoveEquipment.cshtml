@model Intranet.Models.EquipmentRequestDetails

@{
    ViewBag.Title = "Remove Equipment";
}

<h2>Remove Equipment</h2>

<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.EquipmentRequestDetailID)
    @Html.HiddenFor(model => model.EquipmentRequestID)
    @Html.HiddenFor(model => model.EquipmentID)

    <div class="row">
        <hr />
        @Html.Partial("~/Views/EquipmentRequests/_EquipmentRequested.cshtml", ViewData["EquipmentToRemove"])
    </div>

    <div class="row">     
        <div class="alert alert-dismissible alert-danger">
            Are you sure you want to delete this equipment from the request? It cannot be undone.
        </div>
        <div class="form-group">
            <div class="editor-label"></div>
            <div class="col-md-10">
                <input type="submit" value="Remove" name="Buttons" class="btn btn-primary" />
            </div>
        </div>
        <br />&nbsp;
        <br />&nbsp;   

        <div class="form-group">
            <div class="editor-label"></div>
            <div class="col-md-10">
                @Html.ActionLink("Back to List", "Edit", new { id = Model.EquipmentRequestID })
            </div>
        </div>
        <br />&nbsp;
    </div>

}

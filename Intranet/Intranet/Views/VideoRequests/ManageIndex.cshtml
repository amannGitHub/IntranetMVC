<table width="100%">
    <tr>
        <td>
            <div id="demo">
                <table id="datatablesRequests" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.VideoRequestID)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                            <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
                            <th>@Html.DisplayNameFor(model => model.ProjectName)</th>
                            <th>@Html.DisplayNameFor(model => model.VideoType)</th>
                            <th>@Html.DisplayNameFor(model => model.VideoRequestStatus)</th>
                            <th>@Html.DisplayNameFor(model => model.StatusDate)</th>
                            <th>@Html.DisplayNameFor(model => model.DueDate)</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VideoRequestID</td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.ProjectName</td>
                            <td>@item.VideoType</td>
                            <td>@item.VideoRequestStatus</td>
                            <td>@item.StatusDate.ToShortDateString()</td>
                            <td>@item.DueDate.ToShortDateString()</td>
                            <td>
                                @Html.ActionLink("View", "Details", new { id = item.VideoRequestID, Manage = "Yes" })
                                <text>|</text>
                                @if (item.VideoRequestStatus != "Completed")
                                {
                                    @Html.ActionLink("Manage", "ManageRequest", new { id = item.VideoRequestID, Manage = "Yes" })
                                }
                                else
                                {
                                    <span class="text-muted">Manage</span>
                                }
                                <text>|</text>
                                @if (item.VideoRequestStatus == "Submitted")
                                {
                                    @Html.ActionLink("Delete", "ManageDelete", new { id = item.VideoRequestID })
                                }
                                else
                                {
                                    <span class="text-muted">Delete</span>
                                }
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>


@model IEnumerable<Intranet.ViewModels.VideoRequestsViewModel>

@{
    ViewBag.Title = "Video Requests";
}

<h2>My Video Requests</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success">@TempData["Message"]</div>
}
<br />
@using (Html.BeginForm())
{
    <input type="submit" value="Request Video" name="Buttons" class="btn btn-primary"/>
    if (@User.IsInRole("SCGCORP\\Video"))
    {
        <input type="submit" value="Manage Video Requests" name="Buttons" class="btn btn-primary" />
    }
}
<br />

<table width="100%">
    <tr>
        <td>
            <div id="demo">
                <table id="datatablesRequests" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.VideoRequestID)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                            <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
                            <th>@Html.DisplayNameFor(model => model.ProjectName)</th>
                            <th>@Html.DisplayNameFor(model => model.projnum)</th>
                            <th>@Html.DisplayNameFor(model => model.VideoType)</th>
                            <th>@Html.DisplayNameFor(model => model.VideoRequestStatus)</th>
                            <th>@Html.DisplayNameFor(model => model.DueDate)</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VideoRequestID</td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.ProjectName</td>
                            <td>@item.projnum</td>
                            <td>@item.VideoType</td>
                            <td>@item.VideoRequestStatus</td>
                            <td>@item.DueDate.ToShortDateString()</td>
                            <td>@Html.ActionLink("View", "Details", new { id = item.VideoRequestID })

                            <text>|</text>

                                @if (item.VideoRequestStatus != "Completed")
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = item.VideoRequestID })
                                }
                                else
                                {
                                    <span class="text-muted">Edit</span>
                                }

                                <text>|</text>

                                @if (item.VideoRequestStatus != "Completed")
                                {
                                    @Html.ActionLink("Delete", "Delete", new { id = item.VideoRequestID })
                                }
                                else
                                {
                                    <span class="text-muted">Delete</span>
                                }
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>


@model IEnumerable<Intranet.ViewModels.ITRequestsViewModel>

@{
    ViewBag.Title = "IT Requests";
}

<h2>My IT Requests</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success">@TempData["Message"]</div>
}
<br />
@using (Html.BeginForm())
{
    <input type="submit" value="Request Support" name="Buttons" class="btn btn-primary"/>
    if (@User.IsInRole("SCGCORP\\SCG Computer Support"))
    {
        <input type="submit" value="Manage IT Requests" name="Buttons" class="btn btn-primary" />
    }
}
<br />

<table width="100%">
    <tr>
        <td>
            <div id="demo">
                <table id="datatablesRequests" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ITRequestID)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                            <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
                            <th>@Html.DisplayNameFor(model => model.ProjectCode)</th>
                            <th>@Html.DisplayNameFor(model => model.ITRequestStatus)</th>
                            <th>@Html.DisplayNameFor(model => model.StatusDate)</th>
                            <th>@Html.DisplayNameFor(model => model.ITRequestType)</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ITRequestID</td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.ProjectCode</td>
                            <td>@item.ITRequestStatus</td>
                            <td>@item.StatusDate.ToShortDateString()</td>
                            <td>@item.ITRequestType</td>
                            <td>@Html.ActionLink("View", "Details", new { id = item.ITRequestID })

                            <text>|</text>

                                @if (item.ITRequestStatus != "Complete")
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ITRequestID })
                                }
                                else
                                {
                                    <span class="text-muted">Edit</span>
                                }

                                <text>|</text>

                                @if (item.ITRequestStatus != "Complete")
                                {
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ITRequestID })
                                }
                                else
                                {
                                    <span class="text-muted">Delete</span>
                                }
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>


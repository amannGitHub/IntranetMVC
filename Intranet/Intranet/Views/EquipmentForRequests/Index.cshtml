@model IEnumerable<Intranet.ViewModels.EquipmentForRequestsViewModel>

@{
    ViewBag.Title = "Equipment For Requests";
}

<h2>Equipment For Requests</h2>
This screen is for adding equipment that can be checked out to SCG staff. Only the IT department can access it.<br />
@if (TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success">@TempData["Message"]</div>
}
<br />
@using (Html.BeginForm())
{
    <input type="submit" value="Add Equipment" name="Buttons" class="btn btn-primary"/>
}
<br />

<table width="100%">
    <tr>
        <td>
            <div id="demo">
                <table id="datatables" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.EquipmentID)</th>
                            <th>@Html.DisplayNameFor(model => model.EquipmentCategory)</th>
                            <th>@Html.DisplayNameFor(model => model.ItemName)</th>
                            <th>@Html.DisplayNameFor(model => model.ItemDescription)</th>
                            <th>@Html.DisplayNameFor(model => model.EquipmentCondition)</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EquipmentID</td>
                            <td>@item.EquipmentCategory</td>
                            <td>@item.ItemName</td>
                            <td>@item.ItemDescription</td>
                            <td>@item.EquipmentCondition</td>
                            <td>@Html.ActionLink("View", "Details", new { id = item.EquipmentID })

                                <text>|</text>

                                @Html.ActionLink("Edit", "Edit", new { id = item.EquipmentID })
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>


@model IEnumerable<Intranet.ViewModels.MeetingsViewModel>

@{
    ViewBag.Title = "Meeting Tracker";
}

<h2>Meeting Tracker</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success">@TempData["Message"]</div>
}
<br />
@using (Html.BeginForm())
{
    <input type="submit" value="Create Meeting" name="Buttons" class="btn btn-primary"/>
    @*if (@User.IsInRole("SCGCORP\\Developers"))
    {
        <input type="submit" value="Manage Editing Requests" name="Buttons" class="btn btn-primary" />
    }*@
}
<br />

<table width="100%">
    <tr>
        <td>
            <div id="demo">
                <table id="datatablesMeetings" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.MeetingID)</th>
                            <th>@Html.DisplayNameFor(model => model.Project)</th>
                            <th>@Html.DisplayNameFor(model => model.MeetingTitle)</th>
                            <th>@Html.DisplayNameFor(model => model.MeetingPlanner)</th>
                            <th>@Html.DisplayNameFor(model => model.Client)</th>
                            <th>@Html.DisplayNameFor(model => model.MeetingStartDate)</th>
                            <th>@Html.DisplayNameFor(model => model.MeetingEndDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Location)</th>
                            <th>@Html.DisplayNameFor(model => model.RegistrationEndDate)</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MeetingID</td>
                            <td>@item.Project</td>
                            <td>@item.MeetingTitle</td>
                            <td>@item.MeetingPlanner</td>
                            <td>@item.Client</td>
                            <td>@item.MeetingStartDate.ToShortDateString()</td>
                            <td>@item.MeetingEndDate.ToShortDateString()</td>
                            <td>@item.Location</td>
                            <td>@item.RegistrationEndDate.ToShortDateString()</td>
                            <td>@Html.ActionLink("View", "Details", new { id = item.MeetingID })

                            <text>|</text>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MeetingID })                                
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>


@model IEnumerable<Intranet.ViewModels.EmployeesViewModel>

@{
    ViewBag.Title = "Employee Directory";
}

<h2>Employee Directory</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success">@TempData["Message"]</div>
}
<br />

<table width="100%">
    <tr>
        <td>
            <div id="demo">
                <table id="datatables" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                            <th>@Html.DisplayNameFor(model => model.LastName)</th>
                            <th>@Html.DisplayNameFor(model => model.ext)</th>
                            <th>@Html.DisplayNameFor(model => model.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.Location)</th>
                            <th>@Html.DisplayNameFor(model => model.email)</th>
                            <th>@Html.DisplayNameFor(model => model.SupervisorName)</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.ext</td>
                            <td>@item.Phone</td>
                            <td>@item.Location</td>
                            <td><a href="mailto:@item.email">@item.email</a></td>
                            <td>@item.SupervisorName</td>
                        </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>


@model IEnumerable<Intranet.ViewModels.GraphicsRequestsViewModel>

@{
    ViewBag.Title = "Manage Graphics Requests";
}

<h2>Manage Graphics Requests</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success">@TempData["Message"]</div>
}
<br />
<table width="100%">
    <tr>
        <td>
            <div id="demo">
                <table id="datatablesRequests" class="table table-striped table-hover graphics-table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.GraphicsRequestID)</th>
                            <th>@Html.DisplayNameFor(model => model.RequestDate)</th>
                            <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
                            <th>@Html.DisplayNameFor(model => model.ProjectTitle)</th>
                            <th>@Html.DisplayNameFor(model => model.DraftDueDate)</th>
                            <th>@Html.DisplayNameFor(model => model.FinalDueDate)</th>
                            <th>@Html.DisplayNameFor(model => model.GraphicsRequestStatus)</th>
                            <th>@Html.DisplayNameFor(model => model.AssigneeName)</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr
                            @switch (@item.AssigneeName)
                            {
                                case "Adam Ritterpusch":
                                    @:class="adam"
                                    break;
                                    //ToDo: Remove myself after testing completes
                                case "Daniel Herold":
                                    @:class="dan"
                                    break;
                                case "William Harris":
                                    @:class="bill"
                                    break;
                                case "Charles Wallace":
                                    @:class="charles"
                                    break;
                                case "Eric Doty":
                                    @:class="eric"
                                    break;
                                case "Gabriel Fabre":
                                    @:class="gabe"
                                    break;
                                case "Jessica Gopaul":
                                    @:class="jess"
                                    break;
                                case "Stephen Grenis":
                                    @:class="steve"
                                    break;
                                default:
                                    break;
                            }
                        >
                            <td>@item.GraphicsRequestID</td>
                            <td>@item.RequestDate</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.ProjectTitle</td>
                            <td>@item.DraftDueDate.ToShortDateString()</td>
                            <td>@item.FinalDueDate.ToShortDateString()</td>
                            <td>@item.GraphicsRequestStatus</td>
                            <td>@item.AssigneeName</td>
                            <td>
                                @Html.ActionLink("View", "Details", new { id = item.GraphicsRequestID, Manage = "Yes" })
                            <text>|</text>
                            @if (item.GraphicsRequestStatus == "Completed")
                            {
                                <span class="text-muted">Manage</span>
                            }
                            else
                            {
                                @Html.ActionLink("Manage", "ManageRequest", new { id = item.GraphicsRequestID, Manage = "Yes" })
                            }
                            <text>|</text>
                            @if (item.GraphicsRequestStatus == "Submitted")
                            {
                                @Html.ActionLink("Delete", "ManageDelete", new { id = item.GraphicsRequestID, Manage = "Yes" })
                            }
                            else
                            {
                                <span class="text-muted">Delete</span>
                            }
                        </td>
                    </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>
@* Make the rows colors based on the assigned designer *@
@Styles.Render("~/Content/Site.css")
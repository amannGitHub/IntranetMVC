@model IEnumerable<Intranet.ViewModels.GraphicsRequestsViewModel>

@{
    ViewBag.Title = "Graphics Requests";
}

<h2>My Graphics Requests</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success">@TempData["Message"]</div>
}
<br />
@using (Html.BeginForm())
{
    <input type="submit" value="Request Graphic" name="Buttons" class="btn btn-primary"/>
    if (@User.IsInRole("SCGCORP\\Graphics"))
    {
        <input type="submit" value="Manage Graphics Requests" name="Buttons" class="btn btn-primary" />
    }
}
<br />
<table width="100%">
    <tr>
        <td>
            <div id="demo">
                <table id="datatablesRequests" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.GraphicsRequestID)</th>
                            <th>@Html.DisplayNameFor(model => model.RequestDate)</th>
                            <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
                            <th>@Html.DisplayNameFor(model => model.ProjectTitle)</th>
                            <th>@Html.DisplayNameFor(model => model.DraftDueDate)</th>
                            <th>@Html.DisplayNameFor(model => model.FinalDueDate)</th>
                            <th>@Html.DisplayNameFor(model => model.GraphicsRequestStatus)</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.GraphicsRequestID</td>
                            <td>@item.RequestDate.ToShortDateString()</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.ProjectTitle</td>
                            <td>@item.DraftDueDate.ToShortDateString()</td>
                            <td>@item.FinalDueDate.ToShortDateString()</td>
                            <td>@item.GraphicsRequestStatus</td>
                            <td>@Html.ActionLink("View", "Details", new { id = item.GraphicsRequestID })

                            <text>|</text>

                                @if (item.GraphicsRequestStatus == "Complete")
                                {
                                    <span class="text-muted">Edit</span>
                                }
                                else
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = item.GraphicsRequestID })
                                }

                                <text>|</text>

                                @if (item.GraphicsRequestStatus == "Submitted")
                                {
                                    @Html.ActionLink("Delete", "Delete", new { id = item.GraphicsRequestID })
                                }
                                else
                                {
                                    <span class="text-muted">Delete</span>
                                }
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>

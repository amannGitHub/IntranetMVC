@model IEnumerable<Intranet.ViewModels.ProjectsViewModel>

@{
    ViewBag.Title = "Projects";
}

<h2>Projects</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success">@TempData["Message"]</div>
}
<br />
@using (Html.BeginForm())
{
    <input type="submit" value="Create Project" name="Buttons" class="btn btn-primary" />
    @*if (@User.IsInRole("SCGCORP\\Developers"))
    {
        <input type="submit" value="Manage Projects" name="Buttons" class="btn btn-primary" />
    }*@
}
<br />

<table width="100%">
    <tr>
        <td>
            <div id="demo">
                <table id="datatables" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ProjectCode)</th>
                            <th>@Html.DisplayNameFor(model => model.ProjectName)</th>
                            <th>@Html.DisplayNameFor(model => model.ContractNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.Client)</th>
                            <th>@Html.DisplayNameFor(model => model.Division)</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProjectCode</td>
                            <td>@item.ProjectName</td>
                            <td>@item.ContractNumber</td>
                            <td>@item.Client</td>
                            <td>@item.Division</td>
                            <td>@Html.ActionLink("View", "Details", new { id = item.project_id })

                            <text>|</text>

                                @if (User.IsInRole("SCGCORP\\Developers"))
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = item.project_id })
                                }
                                else
                                {
                                    <span class="text-muted">Edit</span>
                                }

                                <text>|</text>

                                @if (User.IsInRole("SCGCORP\\Developers"))
                                {
                                    @Html.ActionLink("Delete", "Delete", new { id = item.project_id })
                                }
                                else
                                {
                                    <span class="text-muted">Delete</span>
                                }
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </td>
    </tr>
</table>


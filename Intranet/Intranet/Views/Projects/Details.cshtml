@model Intranet.Models.Projects

@{
    ViewBag.Title = "Projects";
}

<h2>View Project</h2>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.HiddenFor(model => model.project_id)

        <div class="col-md-4">
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.ProjectName)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.ProjectName)
                </div>
            </div>
            <br />&nbsp;
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.ProjectCode)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.ProjectCode)
                </div>
            </div>
            <br />&nbsp;
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.TaskNumber)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.TaskNumber)
                </div>
            </div>
            <br />&nbsp;
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.ContractNumber)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.ContractNumber)
                </div>
            </div>
            <br />&nbsp;

            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.ClientID)
                </div>
                <div class="col-md-10">
                    @Html.DropDownList("ClientID", ViewData["client"] as List<SelectListItem>, "Select...", new { @disabled = "disabled" })
                </div>
            </div>
            <br />&nbsp;
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.DivisionID)
                </div>
                <div class="col-md-10">
                    @Html.DropDownList("DivisionID", ViewData["division"] as List<SelectListItem>, "Select...", new { @disabled = "disabled" })
                </div>
            </div>
            <br />&nbsp;
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.StartDate)
                </div>
                <div class="col-md-10">
                    @if (Model.StartDate != null)
                    {
                        @Html.DisplayFor(model => model.StartDate)
                    }
                    else
                    {
                        @System.Web.Configuration.WebConfigurationManager.AppSettings["NoDataText"]
                    }
                </div>
            </div>
            <br />&nbsp;
            @* Commented below out because I think the display should be for EndDate but I'm not 100% sure. Wanted to be able to revert in case it was supposed to be the other way. *@
            @*<div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EndDate)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CreatedDate)
                </div>
            </div>*@
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EndDate)
                </div>
                <div class="col-md-10">
                    @if (Model.EndDate != null)
                    {
                        @Html.DisplayFor(model => model.EndDate)
                    }
                    else
                    {
                        @System.Web.Configuration.WebConfigurationManager.AppSettings["NoDataText"]
                    }
                </div>
            </div>
            <br />&nbsp;
            <br />&nbsp;

        </div>

    </div>


    <div class="row">        
        <div class="form-group">
            <div class="editor-label"></div>
            <div class="col-md-10">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
        <br />&nbsp;
    </div>

}
